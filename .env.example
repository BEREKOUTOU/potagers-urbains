# Environment Configuration for Green City Grow Hub

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=greencitygrowhub
DB_USER=your_db_user
